<div class="container-fluid greenBG">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/team/create/{{captain}}" method="POST">
                <div class="form-group">
                    <label for="sportSelect">{{captain}}'s Team</label>
                    <select class="form-control" name="team_sport" id="sportSelect">
                        <option>Basketball</option>
                        <option>Football</option>
                        <option>Soccer</option>
                        <option>Baseball</option>
                        <option>Hockey</option>
                        <option>Kickball</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="email">Team Name:</label>
                    <input type="text" class="form-control" name="team_name">
                </div>

                <button class="btn btn-orange" type="submit">Add Team</button>
            </form>

        </div>


    </div>

</div>