<div class="container-fluid greenBG">
    <div class="col">
        <h1 class="welcomePlayer">Welcome {{ user.user_name}}</h1>
    </div>
    {{#if team}}

    <div class="row justify-content-around ">
        <div class="col-md-2  ">
            <div class="card " style="width: 18rem;">
                <i class="fas fa-user-alt card-img-top"></i>
                <div class="card-body">
                    <a href="/teams/{{team.id}}" class=" btn btn-orange ">Update Team</a>
                </div>
            </div>
        </div>
        <div class="col-md-8   ">

            <h1 id="teamName">TEAM Name: {{team.team_name}}</h1>

            <div id="scores">
                <span>WINS</span>
                <span id="wins">4</span>
                <span id="losses">0</span>
                <span>LOSSES</span>
            </div>




        </div>



    </div>


    {{/if}} {{#unless team}}

    <div class="row justify-content-center">
        <div class="col-auto">
            <div class="card" style="width: 18rem;">
                <i class="fas fa-user-alt card-img-top"></i>
                <div class="card-body">
                    <a href="/team/add/{{user.user_name}}" class=" btn btn-orange ">Create Team</a>
                </div>
            </div>
        </div>

    </div>

    {{/unless}}



</div>