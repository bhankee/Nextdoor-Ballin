<div class="container-fluid greenBG">



    <div class="row justify-content-around ">
        <div class="col-md-2  ">
            <div class="card " style="width: 18rem;">
                <i class="fas fa-user-alt card-img-top"></i>
                <h3>{{ user.user_name}}</h3>
                <div class="card-body">
                    {{#if team}}
                    <a href="/teams/{{team.id}}" class=" btn btn-orange ">Update Team</a>
                    {{/if}} {{#unless team}}
                    <a href="/team/add/{{user.user_name}}" class=" btn btn-orange ">Create Team</a>
                    {{/unless}}

                </div>
            </div>
        </div>
        <div class="col-md-6 text-center bg-white teamScores">
            {{#if team}}

            <h1 id="teamName"> {{team.team_name}}</h1>

            <div id="scores">
                <span>WINS</span>
                <span id="wins">{{team.wins}}</span>
                <span id="losses">{{team.losses}}</span>
                <span>LOSSES</span>
            </div>

            {{/if}} {{#unless team}}
            <h1 id="teamName"> Your Team Coming Soon</h1>

            <div id="scores">
                <span>WINS</span>
                <span id="wins">0</span>
                <span id="losses">0</span>
                <span>LOSSES</span>
            </div>


            {{/unless}}




        </div>




    </div>
    <div class="row justify-content-center matchRow">
        <div class="col-md-8 text-center matchCol  ">
            <h1>Upcoming Matches</h1>
            {{#each match}}

            <h1 class="list-group-item-match text-white font-weight-bold match">{{this.team_one}} VS.{{this.team_two}} </h1>

            {{/each}}
        </div>

    </div>





</div>